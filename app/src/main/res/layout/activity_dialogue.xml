<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context="com.example.android.dummyui.DialogueActivity"
    android:id="@+id/dialogueLayout">

    <TextView
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/dialogueBox"
        android:background="@drawable/dialogue"
        android:onClick="onClick"
        android:clickable="true"
        android:text="             words"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/nameBox"
        android:layout_above="@+id/dialogueBox"
        android:layout_alignStart="@+id/dialogueBox" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:id="@+id/Dchar4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:id="@+id/Dchar1"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/Dchar4"
        android:layout_toEndOf="@+id/Dchar4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:id="@+id/Dchar3"
        android:layout_alignTop="@+id/Dchar1"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:id="@+id/imageView"
        android:layout_marginEnd="35dp"
        android:layout_alignTop="@+id/Dchar3"
        android:layout_toStartOf="@+id/Dchar3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/DMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/DTime"
        android:layout_alignBottom="@+id/DMenu"
        android:layout_toStartOf="@+id/DMenu" />

</RelativeLayout>
